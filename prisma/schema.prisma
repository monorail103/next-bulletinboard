generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Thread {
  id        String   @id @default(uuid())
  title     String
  createdAt DateTime @default(now())
  ipaddress String
  isActive  Boolean  @default(true)
}

model Post {
  id        String   @id @default(uuid())
  content   String
  ThreadId  String
  username  String
  createdAt DateTime @default(now())
  ipaddress String
}